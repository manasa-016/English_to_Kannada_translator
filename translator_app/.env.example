# Environment Configuration Template
# Copy this file to .env and fill in your values (optional)

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Google Cloud Configuration (Optional)
# Get these from https://cloud.google.com
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# Translation API Configuration
# Currently using free MyMemory API (no key needed)
MYMEMORY_API_URL=https://api.mymemory.translated.net/get

# Speech Recognition Configuration
# Using free Google Speech Recognition API
SPEECH_RECOGNITION_ENABLED=True

# Text-to-Speech Configuration
# Using free gTTS (Google Text-to-Speech) API
TEXT_TO_SPEECH_ENABLED=True

# Application Settings
MAX_AUDIO_SIZE=16777216  # 16MB in bytes
MAX_TEXT_LENGTH=5000
TRANSLATION_HISTORY_SIZE=20

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Features
ENABLE_VOICE_FEATURES=True
ENABLE_TRANSLATION_HISTORY=True
ENABLE_AUDIO_CACHING=False

# Language Settings
DEFAULT_SOURCE_LANGUAGE=en
DEFAULT_TARGET_LANGUAGE=kn
